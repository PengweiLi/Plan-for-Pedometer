<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#FFAEB9">
    <TextView 
        android:id="@+id/unlock_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textStyle="italic"
        android:textColor="#FFFFFF"
        android:text="@string/lock_message"/>

    <com.lipengwei.pedometer.MyCircleView
        android:id="@+id/remanentstepsnumber"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/unlock_text"
        android:layout_marginTop="46dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/remanentsteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remanentstepsnumber"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="The Rest of Steps"
        android:textStyle="italic"
        android:textSize="20sp"/>
    
    <LinearLayout
        android:id="@+id/plannumandtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remanentsteps"
        android:layout_marginTop="46dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:text="Plan Steps"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:text="Time Quantum"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plannumandtimetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plannumandtime"
        android:layout_below="@+id/plannumandtime">

        <TextView
            android:id="@+id/plannum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/plantime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>
